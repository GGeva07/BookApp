<div class="row mt-5">
    <div class="text-center">
        <h4 style="color: white;">LIBROS</h4>
    </div>
</div>

<div class="row text-center">
    <div class="col-12 col-sm-12 mb-3 mt-3">
        <a href="/libro/create" class="btn btn-dark" style="background-color: #673d36;">Agregar
            <i class=" bi bi-plus-circle"></i></a>
    </div>
</div>
{{#if hasLibros}}
<table class="table table-striped table-bordered table-hover text-center"
    style="border-radius: 12px; overflow: hidden; box-shadow: 0 2px 8px rgba(36,45,80,0.08);">
    <div class="row">
        <thead>
            <tr>
                <th style="background-color: #673d36; color: white; border: none;">Portada</th>
                <th style="background-color: #673d36; color: white; border: none;">Titulo</th>
                <th style="background-color: #673d36; color: white; border: none;">AÃ±o de publicacion</th>
                <th style="background-color: #673d36; color: white; border: none;">Categoria</th>
                <th style="background-color: #673d36; color: white; border: none;">Autor</th>
                <th style="background-color: #673d36; color: white; border: none;">Editorial</th>
                <th style="background-color: #673d36; color: white; border: none;">Acciones</th>
            </tr>
        </thead>

        <tbody>
            {{#each libros}}
            <tr style="border: none; consulta-row">
                <td style="border: none; background: #f8fafc;"><img src="{{this.CoverImg}}"
                        alt="{{this.Titulo}} img - {{this.id}} - {{this.Anio}} " width="80px" height="80px"></td>
                <td style="border: none; background: #f8fafc;">{{this.Titulo}}</td>
                <td style="border: none; background: #f8fafc;">{{this.Anio}}</td>
                <td style="border: none; background: #f8fafc;">{{this.Categoria.Nombre}}</td>
                <td style="border: none; background: #f8fafc;">{{this.Autor.Nombre}}</td>
                <td style="border: none; background: #f8fafc;">{{this.Editorial.Nombre}}</td>

                <td style="border: none; background: #f8fafc;">

                    <form class="form-eliminar" method="POST" action="/libro/delete/{{this.id}}">
                        <a href="/libro/update/{{this.id}}" class="btn btn-warning me-2"><i
                                class="bi bi-pencil-square"></i></a>
                        <input type=" hidden" name="id" value={{this.id}} hidden>
                        <button class="mensaje-confirmacion btn btn-danger delete-genero" type="submit">
                            <i class="bi bi-x-circle"></i></button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </div>
</table>
{{else}}
<div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-4">
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>No tienes libros disponibles agrega uno nuevo
        </div>
    </div>

</div>
{{/if}}