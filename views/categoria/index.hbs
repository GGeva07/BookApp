<div class="row mt-5">
    <div class="text-center">
        <h4 style="color: white;">CATEGORIAS</h4>
    </div>
</div>

<div class="row text-center">
    <div class="col-12 col-sm-12 mb-3 mt-3">
        <a href="/categoria/create" class="btn btn-dark" style="background-color: #673d36;">Agregar
            <i class=" bi bi-plus-circle"></i></a>
    </div>
</div>
{{#if hasCategorias}}
<table class="table table-striped table-bordered table-hover text-center"
    style="border-radius: 12px; overflow: hidden; box-shadow: 0 2px 8px rgba(36,45,80,0.08);">
    <div class="row">
        <thead>
            <tr>
                <th style="background-color: #673d36; color: white; border: none;">Nombre</th>
                <th style="background-color: #673d36; color: white; border: none;">Descripcion</th>
                <th style="background-color: #673d36; color: white; border: none;">Acciones</th>
            </tr>
        </thead>

        <tbody>
            {{#each categorias}}
            <tr style="border: none; consulta-row">
                <td style="border: none; background: #f8fafc;">{{this.Nombre}}</td>
                <td style="border: none; background: #f8fafc;">{{this.Descripcion}}</td>
                <td style="border: none; background: #f8fafc;">

                    <form class="form-eliminar" method="POST" action="/categoria/delete/{{this.id}}">
                        <a href="/categoria/update/{{this.id}}" class="btn btn-warning me-2"><i
                                class="bi bi-pencil-square"></i></a>
                        <input type=" hidden" name="id" value={{this.id}} hidden>
                        <button class="mensaje-confirmacion btn btn-danger delete-genero" type="submit">
                            <i class="bi bi-x-circle"></i></button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </div>
</table>
{{else}}
<div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-4">
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-circle-fill me-1"></i>No tienes categorias disponibles agrega una nueva
        </div>
    </div>

</div>
{{/if}}